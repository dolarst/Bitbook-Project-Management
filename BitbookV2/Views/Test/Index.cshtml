@model BitbookV2.Models.BasicInfoViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        
        @using (Html.BeginForm("Index", "Test", FormMethod.Post, new {id = "basicInfoRegistration"}))
        {


            <div class="form-group">
                @Html.LabelFor(a => a.Name)
                @Html.TextBoxFor(a => a.Name)
                @Html.ValidationMessageFor(a => a.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.About)
                @Html.TextBoxFor(a => a.About)
                @Html.ValidationMessageFor(a => a.About)
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Experiences)
                @Html.TextBoxFor(a => a.Experiences)
                @Html.ValidationMessageFor(a => a.Experiences)
            </div>
        


          <button type="submit" class="btn btn-default">Register</button>



        }
        
        <div>
            Name = @Model.Name;
            About = @Model.About;
            Experiences = @Model.Experiences;

           
            
            

        </div>
        
        

    </div>
</body>
</html>
